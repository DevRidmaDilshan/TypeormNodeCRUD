{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src", 
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "declaration": true,
      "sourceMap": true, 
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "typeRoots": [
        "./node_module/@types",
        "./src/types"
      ],
    }
    
  }